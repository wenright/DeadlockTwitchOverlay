{
  "manifest_version": 3,
  "name": "Deadlock Twitch Overlay",
  "version": "1.0",
  "description": "Allows you to hover over a twitch streamer's items to see what they do",
  "icons": {
    "48": "souls_icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/index.html",
        "/item_classifier_model/*"
      ],
      "matches": [
        "*://*.twitch.tv/*"
      ]
    }
  ]
}