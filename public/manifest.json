{
  "manifest_version": 2,
  "name": "My Firefox Extension",
  "version": "1.0",
  "description": "A React-based Firefox extension",
  "content_scripts": [
    {
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}